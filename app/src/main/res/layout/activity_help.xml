<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.qtv1.Help"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiet Time App Help:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/help1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Indicate (using the clock on the home screen) what time class ends, or what time you would like Quiet Time to end."
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/help2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/directions"
        android:layout_marginBottom="9dp" />

    <TextView
        android:id="@+id/help2"
        android:layout_width="0dp"
        android:layout_height="163dp"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:text="NOTE: Please remember to turn your sound on, and to the volume you would like for the alerts. Also, the current version of this application uses your default alert notification that your device is set to. You may want to change your alert prior to starting quiet time.                                                     ALSO: This application saves the duration of each quiet time. If you wish to play around with the application, please make a test account. You can make as many as you would like and the username does not have to be an email."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/directions"
        app:layout_constraintVertical_bias="0.25"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.513" />

    <TextView
        android:id="@+id/app_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="The Quiet Time App is intended for use during Quiet Time/meditation, especially in a classroom setting. The purpose of this application is to offer a soft warning 3 minutes before the time indicated (the assumption being that this is the end of class). Rather than being startled by an end-of-class bell, students/anyone participating in Quiet Time can gradually prepare themselves for the end of class- signalling the end of Quiet Time"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/directions"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@+id/help_title" />

    <Button
        android:id="@+id/abort"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:onClick="onHomeTap"
        android:text="return home"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.759"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directions for use:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="@+id/abort"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
